    <CodeFix Include="$(MSBuildThisFileDirectory)Stunts.CodeFix.dll" />
    <CodeFix Include="$(MSBuildThisFileDirectory)Roslyn.Services.Test.Utilities.dll" />
  </ItemGroup>

</Project>