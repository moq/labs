<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <ApplyCodeFixOnBuild Condition="'$(ApplyCodeFixOnBuild)' == ''">true</ApplyCodeFixOnBuild>
  </PropertyGroup>

  <Target Name="_AddIntermediateStunts" BeforeTargets="Compile">
    <ItemGroup>
      <Compile Include="$(IntermediateOutputPath)Stunts/*$(DefaultLanguageSourceExtension)">
        <Visible>false</Visible>
      </Compile>
      <!--
      <Compile Update="@(Compile -> WithMetadataValue('LinkBase', 'Stunts'))">
        <Visible>false</Visible>
      </Compile>
      -->
    </ItemGroup>
  </Target>

  <Import Project="Stunts.CodeFix.targets" Condition="'$(ApplyCodeFixOnBuild)' == 'true' and Exists('Stunts.CodeFix.targets')" />
</Project>